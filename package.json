{
  "name": "typescript-electron-app",
  "version": "1.0.0",
  "description": "A basic Electron app using TypeScript, HTML, and CSS",
  "main": "dist/main.js",
  "author": "",
  "license": "ISC",
  "scripts": {
    "start": "npm run build && electron .",
    "build": "tsc",
    "clean": "rm -rf dist",
    "package": "electron-builder",
    "dist": "npm run clean && npm run build && electron-builder"
  },
  "devDependencies": {
    "@types/electron": "^1.6.12",
    "@types/node": "^22.9.0",
    "electron": "^33.4.1",
    "electron-builder": "^24.6.2",
    "typescript": "^5.6.3"
  },
  "build": {
    "appId": "com.example.typescriptelectronapp",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "@google-cloud/translate": "^8.5.0"
  }
}
